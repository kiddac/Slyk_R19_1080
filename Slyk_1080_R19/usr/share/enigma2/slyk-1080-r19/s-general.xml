		<applet type="onLayoutFinish">from enigma import getDesktop, eSize, ePoint
desktop_w = getDesktop(0).size().width()
desktop_h = getDesktop(0).size().height()
listcount = 0
iconsize = 53
itemheight = 54
padding = 45

maxwidth = desktop_w - 120
minwidth = desktop_w  // 2

listwidth = self["list"].instance.size().width() + (iconsize + padding)
if listwidth &gt; maxwidth:
	listwidth = maxwidth
	
if listwidth &lt; minwidth:
	listwidth = minwidth

maxtextwidth = listwidth
minheight = iconsize

if self["list"] and self.list is not None:
	listcount = len(self.list)
	if itemheight*listcount &gt; minheight:
		minheight = itemheight*listcount

if not self["text"].text:
	textsize = (maxtextwidth, 0)
else:
	textsizeoriginal = self["text"].getSize()
	textsize = (maxtextwidth, textsizeoriginal[1])
	
listsize = (maxtextwidth, itemheight*listcount)

self["text"].instance.resize(eSize(*textsize))
self["list"].instance.resize(eSize(*listsize))
self["text"].instance.move(ePoint(iconsize + padding, 0))
self["list"].instance.move(ePoint(iconsize + padding, textsize[1] + 30))

wsizex = listwidth
wsizey = textsize[1] + listsize[1] + 60
if wsizey &lt; minheight:
	wsizey = minheight
wsize = (wsizex, wsizey)
self.instance.resize(eSize(*wsize))
self.instance.move(ePoint((desktop_w-wsizex)//2, (desktop_h-wsizey)//2))</applet>
	</screen>
	
