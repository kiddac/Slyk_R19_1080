	<output id="0">
		<resolution xres="1920" yres="1080" bpp="32" />
	</output>
	
    <!-- includes -->
	<include filename="s-button-templates.xml" />
	<include filename="s-main-templates.xml" />
	<include filename="s-menu-templates.xml" />
	<include filename="s-wizards.xml" />
	<include filename="s-general.xml" />
	<include filename="s-CCcamInfo.xml" />
	<include filename="s-ChannelSelection.xml" />
	<include filename="s-epg.xml" />
	<include filename="s-eventview.xml" />
	<include filename="s-infobar.xml" />
	<include filename="s-infopanel.xml" />
	<include filename="s-information.xml" />
	<include filename="s-movies.xml" />
	<include filename="s-network.xml" />
	<include filename="s-plugins.xml" />
	<include filename="s-timers.xml" />
	<include filename="s-extras.xml" />
	<!-- <include filename="s-vix.xml" /> -->
	<include filename="s-toppicks3.xml" />
	
	<include filename="default-openatv.xml" />

	
	<!-- fonts -->
	<fonts>
		<!-- default skin fonts -->
		
		<!--<font name="Fixed" filename="andale.ttf" scale="100" /> -->
		<!--<font name="Enigma"        filename="/usr/share/fonts/valis_enigma.ttf" scale="100" /> -->
		<font name="Subtitlefont"  filename="/usr/share/fonts/nmsbd.ttf" scale="90"/>
		<font name="LCD"           filename="/usr/share/fonts/lcd.ttf" scale="100"/>
		<font name="Replacement"   filename="/usr/share/fonts/ae_AlMateen.ttf"  scale="90" replacement="1"/>
		
		<!-- slyk1hd fonts -->
		<font name="Bold"    filename="fonts/slyk-bold.ttf"   scale="100" />
		<font name="Regular" filename="fonts/slyk-medium.ttf" scale="100" />
		<font name="Console" filename="fonts/Inconsolata-Regular.ttf"       scale="100" />
	
		<!-- alias -->
		<alias name="Body" font="Regular" size="39" height="54" />
		<alias name="TextNormal" font="Regular" size="39" height="54" />
		
		<!-- context menu -->
		<alias name="ChoiceList" font="Regular" size="39" height="54" />
		
		<!-- locationbox i.e movie file location  -->
		<alias name="FileList" font="Regular" size="39" height="54" />
		<alias name="FileListMulti" font="Regular" size="39" height="54" />

		<!-- help menus -->
		<alias name="HelpMenuList" font="Regular" size="39" height="54" />	
		
		<!-- plugins -->
		<alias name="PluginBrowser0" font="Regular" size="32" height="45" />        <!-- plugin name -->
		<alias name="PluginBrowser1" font="Regular" size="21" height="30" />        <!-- plugin description -->
		
		<!-- used on tuner config - positioner -->
		<alias name="SelectionList" font="Regular" size="39" height="54" />

		<!-- virtual keyboard -->
		<alias name="VirtualKeyBoard" font="Regular" size="27" height="67" />
	</fonts>

	<!-- default colour list -->
	<colors>
		<color name="transparent" value="#ff000000" />
		<color name="black" value="#000000" />
		<color name="red" value="#ff0011" />
		<color name="green" value="#307e13" />
		<color name="yellow" value="#ffff00"/>
		<color name="blue" value="#0064c7"/>
		<color name="white" value="#e9e9e9" />
		<color name="zapgreen" value="#007f0e" />
		<color name="verydarkgrey" value="#555555" />
		<color name="grey" value="#8c8c93" />
		
		<!-- slyk1 Colours -->
		<color name="skyblue" value="#5ea1e3" />
		<color name="skylightblue" value="#7eaeef" />
		<color name="skydarkblue" value="#133171" />
		<color name="skygold" value="#f2d320" />
		<color name="skygoldbg" value="#f5c400" />
		<color name="skydarkbluebg" value="#16356e" />
		<color name="guidecolor" value="skyblue" /> <!-- value="skygold" -->
		<color name="backgroundtop" value="#1d68ac" />
		<color name="backgroundmid" value="#1c5791" />
		<color name="backgroundbot" value="#1c4475" />
		<color name="bgdarkblue" value="#082353" />
		<color name="messageboxbg" value="#082353" />
		<color name="skydarkrow" value="#10326c" />
		<color name="skylightrow" value="#204382" />
		<color name="panelblue" value="#00417a" />
		<color name="skytitlebackground" value="#00417a" />
	</colors>
	
	<!-- default colours -->
	<windowstyle type="skinned" id="0">
		<title offset="24,4" font="Bold;39" />
		<color name="Background" color="messageboxbg" />
		<color name="LabelForeground" color="white" />
		<color name="ListboxBackground" color="#00102751" />
		<color name="ListboxForeground" color="white" />
		<color name="ListboxSelectedBackground" color="skygold" />
		<color name="ListboxSelectedForeground" color="skydarkblue" />
		<color name="ListboxMarkedBackground" color="black" />
		<color name="ListboxMarkedForeground" color="red" />
		<color name="ListboxMarkedAndSelectedBackground" color="skygold" />
		<color name="ListboxMarkedAndSelectedForeground" color="skydarkblue" />
		<color name="WindowTitleForeground" color="white" />
		<color name="WindowTitleBackground" color="skytitlebackground" />
		<!-- menu border -->
		<borderset name="bsWindow">
			<pixmap pos="bpTopLeft" filename="screens/b_tl.png" />
			<pixmap pos="bpTop" filename="screens/b_t.png" />
			<pixmap pos="bpTopRight" filename="screens/b_tr.png" />
			<pixmap pos="bpLeft" filename="screens/b_l.png" />
			<pixmap pos="bpRight" filename="screens/b_r.png" />
			<pixmap pos="bpBottomLeft" filename="screens/b_bl.png" />
			<pixmap pos="bpBottom" filename="screens/b_b.png" />
			<pixmap pos="bpBottomRight" filename="screens/b_br.png" />
		</borderset>
	</windowstyle>

	<windowstyle type="skinned" id="1">
		<color name="Background" color="messageboxbg" />
		<color name="LabelForeground" color="white" />
		<color name="ListboxBackground" color="#00102751" />
		<color name="ListboxForeground" color="white" />
		<color name="ListboxSelectedBackground" color="skygold" />
		<color name="ListboxSelectedForeground" color="skydarkblue" />
		<color name="ListboxMarkedBackground" color="black" />
		<color name="ListboxMarkedForeground" color="red" />
		<color name="ListboxMarkedAndSelectedBackground" color="skygold" />
		<color name="ListboxMarkedAndSelectedForeground" color="skydarkblue" />
		<color name="WindowTitleForeground" color="white" />
		<color name="WindowTitleBackground" color="skytitlebackground" />
	</windowstyle>
	
