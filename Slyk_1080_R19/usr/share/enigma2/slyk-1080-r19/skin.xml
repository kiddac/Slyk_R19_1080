		<parameter name="ChoicelistIcon" value="15,8,38,38"/>
		<parameter name="ConfigListSeperator" value="450"/>
		
		<!-- example is software management - backup list -->
		<parameter name="FileListName" value="60,3,723,54" />
		<parameter name="FileListIcon" value="15,12,30,30" />
		<parameter name="FileListMultiName" value="113,8,1040,54" />
		<parameter name="FileListMultiLock" value="15,9,38,38" />
