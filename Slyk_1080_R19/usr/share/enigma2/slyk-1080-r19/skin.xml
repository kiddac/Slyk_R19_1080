		 <!-- information - services -->
		<parameter name="ServiceInfo" value="0,0,345,45" />
		<parameter name="ServiceInfoLeft" value="0,0,345,38" />
		<parameter name="ServiceInfoRight" value="345,0,593,38" />
		
		<!-- used on tuner config - positioner -->
		<parameter name="SelectionListDescr" value="75,3,1125,45" />
		<parameter name="SelectionListLock" value="15,3,38,36" />
		<parameter name="SelectionListLockOff" value="15,3,38,36" />

		<parameter name="VirtualKeyBoard" value="67,67"/>
